<% @body_id = 'Page' %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= @page.title %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <% if SpreePages::Config.use_raw_body_text && !SpreePages::Config.use_action_text %>
        <%= raw @page.body %>
      <% else %>
        <%= @page.body %>
      <% end %>
    </div>
  </div>
</div>

<% unless @page.visible? %>
  <div class="fixed-bottom text-center">
    <div class="row">
      <div id="draftNotice" class="col-12 d-flex w-100 p-4 justify-content-center align-items-center bg-dark">
        <span class="text-white"><%= Spree.t('spree_pages.draft_mode') %></span>
      </div>
    </div>
  </div>
<% end %>
